<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:contentPadding="4dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/teal_700"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imageviewhinhfood"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageviewhinhfood"
            android:id="@+id/textviewtenfood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten mon an"
            android:textSize="30sp"></TextView>

        <TextView
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textviewtenfood"
            app:layout_constraintLeft_toRightOf="@+id/imageviewhinhfood"
            android:text="Gia"
            android:textSize="20sp"
            android:id="@+id/textviewgiafood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>