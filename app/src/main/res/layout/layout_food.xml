<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/imageviewhinhfood"
        android:layout_width="150dp"
        android:layout_height="150dp"></ImageView>

    <TextView
        android:id="@+id/textviewtenfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/imageviewhinhfood"
        android:text="Ten mon an"
        android:textSize="30sp"></TextView>

    <TextView
        android:layout_below="@+id/textviewtenfood"
        android:layout_toRightOf="@+id/imageviewhinhfood"
        android:text="Gia"
        android:textSize="20sp"
        android:id="@+id/textviewgiafood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
</RelativeLayout>